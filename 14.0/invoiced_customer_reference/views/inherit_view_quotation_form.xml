<odoo>
  <data>
    <record model="ir.ui.view" id="view_quotation_form_inherited">
      <field name="name">view.quotation.form.inherited</field>
      <field name="model">sale.order</field>
      <field name="inherit_id" ref="sale.view_order_form" />
      <field name="arch" type="xml">
         <!--Ajout du champs Référence Client dans sale order-->
        <xpath expr="//field[@name='payment_term_id']" position="after">
          <field name="client_order_ref" string="Customer Reference"/>
        </xpath>

        <!--Ajout du champs Référence Client dans sale order line-->
        <xpath expr="//tree/field[@name='product_uom_qty']" position="before">
             <field name="client_ref" String="Customer Reference"/>
        </xpath>

      </field>
    </record>
  </data>
</odoo>