<odoo>
  <data>
    <record model="ir.ui.view" id="view_quotation_tree_inherited">
      <field name="name">view.quotation.tree.inherited</field>
      <field name="model">sale.order</field>
      <field name="inherit_id" ref="sale.view_quotation_tree" />
      <field name="arch" type="xml">

        <!-- Suppression du premier champ "Client"-->
         <xpath expr="//field[@name='partner_id']" position="attributes">
          <attribute name="invisible">1</attribute>
        </xpath>

        <!--Ajout du nouveau champ "Client"-->
        <xpath expr="//field[@name='create_date']" position="after">
          <field name="partner_id" string="Client"/>
        </xpath>

        <!-- Ajout du champ "Référence client"-->
        <xpath expr="//field[@name='commitment_date']" position="before">
          <field name="client_order_ref" string="Référence client"/>
        </xpath>

        <!--Ajout du champ "Date du devis"-->
        <xpath expr="//field[@name='create_date']" position="replace">
          <field name="date_order" string="Date du devis"/>
        </xpath>
      </field>
    </record>
  </data>
</odoo>